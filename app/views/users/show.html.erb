<main>
  <h2>User summary: <%= link_to @user.user_name, user_path(@user.id) %></h2>
  <p>Joined site <%= @user.created_at.strftime('%b %d, %Y') %></p>
  <section class="user-votes__container">
    <h3 class="user-votes__header">Votes</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted On</th>
        </tr>
      </thead>
      <tbody>
        <% @works.each_with_index do |work, index| %>
          <tr>
            <td><%= link_to work.title, work_path(work.id)%></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td><%= work.category %></td>
            <%# Need to access vote created_at date below: %>
            <td><%= @user.votes[index].created_at.strftime('%b %d, %Y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <%= link_to "See all Users", users_path, class: "btn btn-secondary" %>
  <%= link_to "Back to Media List", root_path, class: "btn btn-primary" %>
</main>