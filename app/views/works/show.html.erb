<main>
<%# WORK SHOW PAGE (SINGLE WORK) %>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>
    <section>
      <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
      <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
      <%= link_to "Upvote", root_path, class: "btn btn-primary" %>
      <%= link_to "Delete",
        work_path(@work.id),
        class: "btn btn-danger",
        method: :delete,
        data: { confirm: 'Are you sure?'}
      %>
    </section>
  </section>
  <section class="works-votes__container">
    <h3><%= @work.votes.count %> votes for this <%= @work.category %> </h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @users.reverse.each_with_index do |user, index| %>
          <tr>
            <td><%= link_to user.user_name, user_path(user.id) %></td>
            <td><%= @work.votes.reverse[index].created_at.strftime('%b %d, %Y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</main>
